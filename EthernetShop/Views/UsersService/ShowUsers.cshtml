@model IEnumerable<EthernetShop.Models.UserShowViewModel>

@{
    ViewBag.Title = "Пользователи";
}

@if (Model.Count() == 0)
{
    <h1>Нет зарегистрированных пользователей.</h1>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Логин : Электронная почта</th>
                <th>Роль</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Адрес</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
                {
                <tr>
                    <td>@user.Login : @user.Email</td>
                    <td>@user.Role</td>
                    <td>@user.FirstName</td>
                    <td>@user.SecondName</td>
                    <td>@user.Adress</td>
                    <td><a href="@Url.Action("DeleteUser", "AdministrationControl", new { user.Id })">Удалить</a></td>
                </tr>
            }
        </tbody>
    </table>
}

